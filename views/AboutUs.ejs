      position: absolute;
      top: 100%;
      background-color: white;
      z-index: 10;
      min-width: 180px;
      border: 1px solid #ccc;
      padding: 0;
      margin: 0;
    }

    nav ul li:hover > ul {
      display: block;
    }

    nav ul ul li a {
      padding: 10px 15px;
      color: darkblue;
      display: block;
      font-weight: 400;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    nav ul ul li a:hover {
      background-color: blanchedalmond;
      color: #0d3a6f;
    }

    .arrow {
      font-size: 0.85rem;
      margin-left: 6px;
      transition: transform 0.3s ease;
      display: inline-block;
    }

